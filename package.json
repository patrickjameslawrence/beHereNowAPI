{
  "name": "beherenow-api",
  "version": "1.0.0",
  "private": true,
  "description": "API for BeHereNow, a geolocation based text sharing app",
  "author": "Patrick Lawrence",
  "keywords": [
    "express",
    "mongodb"
  ],
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node ./dist/index.js",
    "dev": "tsc --watch & NODE_ENV=development nodemon ./dist/index.js",
    "build": "tsc",
    "clean": "rm ./dist",
    "format": "prettier . --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patrickjameslawrence/beHereNowAPI.git"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "bson": "^6.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "mongodb": "^6.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false,
    "jsxSingleQuote": true
  }
}
